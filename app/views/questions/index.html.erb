
  <div class="container">
  <% @questions.each do |question| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Mashrur Hossain
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to question.title, question_path(question), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(question.text, length: 100) %></p>
            <%= link_to "View", question_path(question), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_question_path(question), class: "btn btn-outline-info" %>
            <%= link_to "Delete", question_path(question), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(question.created_at) %> ago, 
            edited <%= time_ago_in_words(question.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
