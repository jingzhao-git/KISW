
<h1>New Question</h1>

<%= form_for :question, url: questions_path do |f| %>  
<% if @question.errors.any? %> 
    <h2>The following errors prevented the article from being saved</h2> 
    <ul> 
    <% @question.errors.full_messages.each do |msg| %> 
        <li><%= msg %></li> 
    <% end %> 
    </ul>
<% end %>
    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
    </p>

    <p>
    <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', questions_path %>