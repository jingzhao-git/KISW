<div class="container">

  <div class="row justify-content-center">

    <div class="col-10">
      <%= render 'shared/errors' %>

      <%= form_with(model: @question, class: "shadow p-5 mb-5 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :catagory, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= f.select :catagory_id, options_from_collection_for_select(Catagory.all, :id, :name), {include_blank: "Select"}, class: "form-control shadow rounded" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :title, rows:2, class: "form-control shadow rounded", placeholder: "Question title" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :text, rows: 10, class: "form-control shadow rounded", placeholder: "More details" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

      <% end %>

    </div>